<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site" method="upgrade">
	<name>aci</name>
	<version>1.0</version>
	<creationDate>6/11/2017</creationDate>
	<author>Vitaliy Zhukov</author>
	<authorEmail>info@aunited.ru</authorEmail>
	<copyright>Based on Protostar</copyright>
	<description>TPL_ASI_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>topbar</position>
		<position>preheader</position>
		<position>debug</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
        <position>bottommenu</position>
		<position>topmenu</position>
		<position>footer</position>
        <position>copyright</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_aci.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_aci.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.tpl_aci.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.tpl_aci.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C" label="TPL_ASI_COLOR_LABEL" description="TPL_ASI_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7" label="TPL_ASI_BACKGROUND_COLOR_LABEL" description="TPL_ASI_BACKGROUND_COLOR_DESC" />

                <field name="iconFile" class="" type="media" default=""	label="TPL_ASI_FAVICON_LABEL" description="TPL_ASI_FAVICON_DESC" />

                <field name="logoFile" class="" type="media" default=""	label="TPL_ASI_LOGO_LABEL" description="TPL_ASI_LOGO_DESC" />

				<field name="bgTexture" class="" type="media" default="" label="TPL_ASI_BGTEXTURE_LABEL" description="TPL_ASI_BGTEXTURE_DESC" />

				<field name="sitetitle"  type="text" default=""	label="JGLOBAL_TITLE" description="JFIELD_ALT_PAGE_TITLE_LABEL"	filter="string" />

				<field name="fulltitle"  type="text" default=""	label="TPL_ASI_FULL_TITLE_LABEL" description="TPL_ASI_FULL_TITLE_DESC"	filter="string" />

				<field name="sitedescription"  type="text" default="" label="JGLOBAL_DESCRIPTION" description="JGLOBAL_SUBHEADING_DESC"	filter="string" />

				<field name="googleFont" type="radio" class="btn-group btn-group-yesno"	default="1"	label="TPL_ASI_FONT_LABEL" description="TPL_ASI_FONT_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

                <field name="noCopy" type="radio" class="btn-group btn-group-yesno"	default="0"	label="TPL_ASI_NOCOPY_LABEL" description="TPL_ASI_NOCOPY_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="logotitle" type="radio" class="btn-group btn-group-yesno"	default="2"	label="TPL_ASI_NOCOPY_LABEL" description="TPL_ASI_NOCOPY_DESC">
                    <option value="2">JGLOBAL_TITLE</option>
                    <option value="1">TPL_ASI_LOGO_LABEL</option>
                    <option value="0">JALL</option>
                </field>


                <field name="startyear" class="" type="integer" first="1900" last="2100" step="1" default="2000" label="TPL_ASI_STARTYEAR_LABEL"	description="TPL_ASI_STARTYEAR_DESC" />

                <field name="googleFontName" class="" type="text" default="Open+Sans" label="TPL_ASI_FONT_NAME_LABEL"	description="TPL_ASI_FONT_NAME_DESC" />

				<field name="fluidContainer" type="radio" class="btn-group btn-group-yesno"	default="0"	label="TPL_ASI_FLUID_LABEL" description="TPL_ASI_FLUID_DESC">
					<option value="1">TPL_ASI_FLUID</option>
					<option value="0">TPL_ASI_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
